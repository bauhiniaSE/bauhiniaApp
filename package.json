{
  "name": "bauhinia-parent",
  "private": true,
  "scripts": {
    "all": "npm run clean && npm run build && npm run lint && npm run test",
    "postinstall": "lerna bootstrap --no-ci && link-parent-bin",
    "lint": "eslint . --resolve-plugins-relative-to . --ext .ts,.tsx",
    "lint:log": "eslint . --resolve-plugins-relative-to . --ext .ts,.tsx -f compact -o lint.log",
    "lint:fix": "eslint . --resolve-plugins-relative-to . --ext .ts,.tsx --fix",
    "clean": "rimraf \"packages/api/!(stryker.conf)+(.d.ts|.js|.map)\" \"packages/*/+(test|src)/**/*+(.d.ts|.js|.map)\" \"packages/*/{.nyc_output,reports,coverage,src-generated,*.tsbuildinfo,.stryker-tmp,dist}\"",
    "build": "tsc -b && lerna run build",
    "test": "lerna run test --stream --concurrency 4",
    "e2e": "cd e2e && npm ci && npm t && cd ..",
    "release": "lerna version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bauhiniaSE/bauhiniaApp.git"
  },
  "bugs": {
    "url": "https://github.com/bauhiniaSE/bauhiniaApp/issues"
  },
  "homepage": "https://github.com/bauhiniaSE/bauhiniaApp#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.2.13",
    "@types/chai-as-promised": "7.1.3",
    "@types/glob": "7.1.3",
    "@types/istanbul": "0.4.30",
    "@types/karma": "5.0.0",
    "@types/lodash": "4.14.162",
    "@types/mkdirp": "1.0.1",
    "@types/mocha": "8.0.3",
    "@types/node": "^14",
    "@types/rimraf": "3.0.0",
    "@types/sinon": "9.0.8",
    "@types/sinon-chai": "3.2.5",
    "@typescript-eslint/eslint-plugin": "4.4.1",
    "@typescript-eslint/parser": "4.4.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "execa": "~3.4.0",
    "glob": "7.1.6",
    "install-local": "2.0.0",
    "jasmine": "3.6.1",
    "jasmine-core": "3.6.0",
    "lerna": "3.22.1",
    "link-parent-bin": "1.0.2",
    "mocha": "8.1.3",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "sinon": "9.2.0",
    "sinon-chai": "3.5.0",
    "source-map-support": "0.5.19",
    "typescript": "4.0.3"
  }
}
