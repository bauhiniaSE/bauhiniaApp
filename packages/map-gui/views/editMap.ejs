<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Map</title>

  <style>
    @import url(https://fonts.googleapis.com/css?family=Roboto:300);

    rect {
      font-family: "Roboto", sans-serif;
      background: #fdfffb;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
      height: 100px;
      width: 300px;
    }

    .flex {
      display: flex;
      justify-content: center;
    }

    .flex-item+.flex-item {
      margin-left: 10px;
    }

    input,
    button {
      font-family: "Roboto", sans-serif;
      background: #fdfffb;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
      margin-bottom: 50px;
      margin-left: 10px;
      margin-right: 10px;
      color: #24616b;
      padding: 25px;
      font-size: inherit;
      border: none;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      width: 250px;
    }

    input:hover,
    button:hover {
      background-color: #a4ccb9;
      color: #133f46;
    }

    body {
      background-image: -webkit-linear-gradient(0deg, #045714, #24616b);
      font-family: "Roboto", sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      overflow: hidden;
    }

    canvas {
      border: 1px solid #000;
    }

    img {
      width: 90px;
      height: 90px;
    }

    #tiles {
      position: fixed;
      right: 0;
      top: 0;
      bottom: 0;
      width: 300px;
      border-left: 1px solid #000;
    }

    #tiles>div {
      width: 95px;
      height: 95px;
      border: 1px solid #000;
    }

    .selected {
      border-color: #f00 !important;
    }
  </style>
</head>

<body>
  <div>
    <div class="flex">
      <input type="button" value="Download project as picture" id="download" />
      <form>
        <input type="button" value="Simulate" id="simulate" />
        <input type="button" value="Save" />
        <button formaction="/">Exit</button>
      </form>
    </div>
    <rect id="r1">Simulation results will be displayed here.</rect>
    <br></br>

    <div class="flex">
      <canvas width="1200" height="700" id="builder"></canvas>
    </div>
    <div id="tiles"></div>
  </div>

  <script src="/map-builder/map-builder.js"></script>
  <script src="/simulation/simulation.js"></script>
  <script type="text/javascript">
    const simulator = new Simulator();
    const mapBuilder = new MapBuilder(document.getElementById('builder'));

    const tilesContainer = document.getElementById('tiles');

    mapBuilder.editMap(location.search.substr(1)).then(() => {
      let selected = null;

      mapBuilder.tiles.forEach(tile => {
        const element = document.createElement('div');
        element.id = tile.id;
        element.onclick = () => {
          if (selected !== null) {
            selected.className = '';
          }
          mapBuilder.selectedTile = tile.id;
          element.className = 'selected';
          selected = element;
        }
        const img = document.createElement('img');
        img.src = tile.image;

        element.appendChild(img);

        tilesContainer.appendChild(element);
      });
    });

    function downloadImage() {
      const link = document.createElement("a");
      document.body.appendChild(link);
      link.download = "html_image.jpg";
      link.href = mapBuilder.toDataURL();
      link.target = '_blank';
      link.click();
    }

    function simulate() {
      document.getElementById("r1").innerText = "Simulation results: 0.00";
    }

    document.getElementById('download').onclick = downloadImage;
    document.getElementById('simulate').onclick = () => simulator.processMap(mapBuilder.getMap());
  </script>
</body>

</html>