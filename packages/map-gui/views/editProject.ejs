<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        @import url(https://fonts.googleapis.com/css?family=Roboto:300);

        rect {
            font-family: "Roboto", sans-serif;
            background: #fdfffb;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
            height: 100px;
            width: 300px;
        }

        .grid-container {
            display: grid;
            column-count: 10;
            grid-template-columns:
                75px 75px 75px 75px 75px 75px 75px 75px 75px 75px;
            grid-template-rows:
                75px 75px 75px 75px 75px;
            grid-gap: none;
        }

        .grid-container>div {
            background-color: rgba(255, 255, 255, 0.8);
            text-align: center;

            border: 1px solid black;
            font-size: 20px;
        }

        .grid-container1 {
            overflow: scroll;
            height: 375px;
            width: auto;
            overflow-x: hidden;
            display: grid;
            column-count: 10;
            grid-template-columns:
                75px 75px 75px 75px 75px;
            grid-template-rows:
                75px 75px 75px 75px 75px;
            grid-gap: none;
        }

        .grid-container1>div {
            max-height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            text-align: center;
            border: 1px solid black;
            font-size: 20px;
        }

        img {
            width: 70px;
        }

        .flex {
            display: flex;
            justify-content: center;
        }

        .flex-item+.flex-item {
            margin-left: 10px;
        }

        input,
        button {
            font-family: "Roboto", sans-serif;
            background: #fdfffb;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
            margin-bottom: 50px;
            margin-left: 10px;
            margin-right: 10px;
            color: #24616b;
            padding: 25px;
            font-size: inherit;
            border: none;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            width: 250px;
        }

        input:hover,
        button:hover {
            background-color: #a4ccb9;
            color: #133f46;
        }

        body {
            background-image: -webkit-linear-gradient(0deg, #045714, #24616b);
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            overflow: hidden;
        }
    </style>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script type="text/javascript">
        function downloadImage() {
            //var container = document.getElementById("image-wrap"); //specific element on page
            var container = document.getElementById('grid_id'); // full page 
            html2canvas(container, { allowTaint: true }).then(function (canvas) {

                var link = document.createElement("a");
                document.body.appendChild(link);
                link.download = "html_image.jpg";
                link.href = canvas.toDataURL();
                link.target = '_blank';
                link.click();
            });
        }

    </script>
</head>

<body style="text-align:center">
    <div>
        <div  class="flex">
            <input type="button" onclick="downloadImage()" value="Download project as picture" />
            <form>
                <input type="button" onclick="simulate()" value="Simulate" />
                <input type="button" value="Save" />
                <button formaction="/">Exit</button>
            </form>
        </div>
        <rect id="r1">Simulation results will be displayed here.</rect>
        <br></br>
        <script>
            function simulate() {
                document.getElementById("r1").innerHTML = "Simulation results: 0.00";
            }
        </script>

        <div class="flex">
            <div id="grid_id" class="grid-container">
                <%for(var i = 0; i < 50; i++){%>
                <div class="grid-item" id="div2">

                </div>
                <%}%>  
            </div>
            <pre>   </pre>
                <div class="grid-container1" >
                    <%for(var i = 0; i < 50; i++){%>
                <div class="grid-item" id="div2">
                    <img  src="/images/pinkShop.png" />
                </div>
                <%}%>
                </div>
        </div>
    </div>
</body>

</html>