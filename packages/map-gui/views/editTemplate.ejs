<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Template</title>

  <style>
    canvas {
      border: 1px solid #000;
    }

    img {
      width: 90px;
      height: 90px;
    }

    #tiles {
      position: fixed;
      right: 0;
      top: 0;
      bottom: 0;
      width: 300px;
      border-left: 1px solid #000;
    }

    #tiles>div {
      width: 95px;
      height: 95px;
      border: 1px solid #000;
    }

    .selected {
      border-color: #f00 !important;
    }
  </style>
</head>

<body>
  <canvas width="1200" height="700" id="builder"></canvas>
  <div id="tiles"></div>

  <script src="/map-builder/map-builder.js"></script>
  <script>
    const tilesContainer = document.getElementById('tiles');

    const mapBuilder = new MapBuilder(document.getElementById('builder'));
    mapBuilder.editTemplate(location.search.substr(1)).then(() => {
      let selected = null;

      mapBuilder.tiles.forEach(tile => {
        const element = document.createElement('div');
        element.id = tile.id;
        element.onclick = () => {
          if (selected !== null) {
            selected.className = '';
          }
          mapBuilder.selectedTile = tile.id;
          element.className = 'selected';
          selected = element;
        }
        const img = document.createElement('img');
        img.src = tile.image;

        element.appendChild(img);

        tilesContainer.appendChild(element);
      });
    });
  </script>
</body>

</html>